@{
    ViewBag.Title = "Dog Adoption Website";
}

<div class="row" id="header">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="../Content/Images/dog1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Dog Adoption Website</h1>
                    <p>We help people find their most loyal friends.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog3.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog4.jpg" alt="Fourth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog5.jpg" alt="Fifth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog6.jpg" alt="Sixth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog7.jpg" alt="Seventh slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../Content/Images/dog8.jpg" alt="Eighth slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- /#header -->

<div class="container">
    <div class="row">
        <div class="col-md-6" id="appFeatures">
            <h3>This application allows you to</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <td>CREATE</td>
                        <td>
                            <p>a new dog's record</p>
                            <p>a new shelter's record</p>
                        </td>
                    </tr>
                    <tr>
                        <td>READ</td>
                        <td>
                            <p>a list of dogs available for adoption</p>
                            <p>a list of shelters</p>
                        </td>
                    </tr>
                    <tr>
                        <td>UPDATE</td>
                        <td>
                            <p>an existing dog record</p>
                            <p>an existing shelter record</p>
                        </td>
                    </tr>
                    <tr>
                        <td>DELETE</td>
                        <td>
                            <p>an existing dog record</p>
                            <p>an existing shelter record</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /#appFeatures -->

        <div class="col-md-6">
            <div class="row" id="dog-card">
                <h2>Find a Dog to Adopt</h2>
                <p>
                    Open your heart and provide a forever home to a dog in need. At the Dog Adoption Website, you can find many adorable,
                    adoptable dogs waiting to meet you right now.
                </p>
                <div class="btn ml-auto">
                    @Html.ActionLink("Check our Dogs List", "Index", "PetDogs")
                </div>
            </div>
            <div class="row" id="shelter-card">
                <h2>Check the Shelters across US and Canada</h2>
                <p>Find a dog shelter close to you.</p>
                <div class="btn ml-auto">
                    @Html.ActionLink("Search for a Shelter", "Index", "Shelters")
                </div>
            </div>
            @*<div class="col-md-4">
                    <img src="https://image.ibb.co/c70Pvb/weimaraner_1381186_640.jpg" alt="Dog Picture" width="300" id="dogHome" />
                </div>*@
        </div>
    </div>

</div>